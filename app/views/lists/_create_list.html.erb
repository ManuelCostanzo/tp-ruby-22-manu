<h1> <%= t(:create_list) %> </h1>
<p><%= t(:description_create) %></p>
<div class="row">
  <div class="col-xs-7 offset-xs-2">
    <%= bootstrap_form_for list do |f| %>
      <div class="input-group">
        <%= f.text_field :title, hide_label: true, required: 'required' %>
        <span class="input-group-btn">
		  <%= f.submit t(:create_list), class: "btn btn-primary" %>
		</span>
      </div>
    <% end %>
  </div>
</div>

<br>

<% if list.errors.any? %>
  <div class="row">
    <big><%= t(:following_errors) %>:</big>
    <br>
    <% list.errors.full_messages.each do |msg| %>
      <mediun class="text-danger"> <%=msg %>. </medium>
      <br>
    <% end %>
  </div>
<% end %>