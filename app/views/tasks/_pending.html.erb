<div class="well">
  <h4 class="text-primary"><span class="label label-primary pull-right"><%= @list.tasks.pending.count %></span> <%= t(:pending) %> </h4>
</div>
<% if @list.tasks.pending.count > 0 %>
	<% @list.tasks.pending.each do |t|%>
			<% if t.type == 'Temporary' %>

	    	<%= render partial: "tasks/temporary", locals: {t: t} %>
	    <% else %>

	    	<%= render partial: "tasks/simple", locals: {t: t} %>
	    <% end %>
	    
			<span class="h5"><%= t(:type) %>:</span> <strong> <%= t(t.type) %>  </strong>
			<%= button_to t(:destroy), task_path(t), method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: "#{t(:are_you_sure)}?" } %>
	    </div>
	  </div>
	<% end %>
<% else %>	
	<%= t(:no_pending_tasks) %>
<% end %>